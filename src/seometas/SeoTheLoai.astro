---
const siteName = "MePhimTV"; 

const { slug, currentCategoryName } = Astro.props;

const siteUrl = Astro.url.origin;   
const currentUrl = Astro.url.href;  

const titleTag = `Phim ${currentCategoryName} Mới Nhất 2025 | ${siteName}`;
const seoDescription = `Tuyển chọn phim ${currentCategoryName} hay nhất, Vietsub miễn phí tại ${siteName}. Kho phim phong phú, cập nhật nhanh, chất lượng HD, trải nghiệm mượt mà không quảng cáo.`;

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    {
      "@type": "ListItem",
      position: 1,
      name: "Trang chủ",
      item: siteUrl,
    },
    {
      "@type": "ListItem",
      position: 2,
      name: "Thể loại",
      item: `${siteUrl}/the-loai`,
    },
    {
      "@type": "ListItem",
      position: 3,
      name: currentCategoryName,
      item: currentUrl,
    },
  ],
};
---


<title>{titleTag}</title>
<meta name="description" content={seoDescription} />
<meta name="robots" content="index, follow" />
<link rel="canonical" href={currentUrl} />

<meta property="og:title" content={titleTag} />
<meta property="og:description" content={seoDescription} />
<meta property="og:url" content={currentUrl} />
<meta property="og:type" content="website" />
<meta property="og:locale" content="vi_VN" />
<meta property="og:site_name" content={siteName} />
<meta property="og:image" content={`${siteUrl}/thumb_web.png`} />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={titleTag} />
<meta name="twitter:description" content={seoDescription} />
<meta name="twitter:site" content="@onflix" />

<script
  type="application/ld+json"
  set:html={JSON.stringify(breadcrumbSchema)}
/>
