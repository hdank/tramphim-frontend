---
import BaseLayout from "../layouts/Layout.astro";
import Header from "../components/Header/Header";
import Footer from "../components/Footer/index";
import MemoryCardGameIframe from "../components/MiniGame/MemoryCardGameIframe";

const title = "Memory Card Game - Trạm Phim";
const description = "Chơi game lật thẻ, nhận đậu thưởng!";
---

<BaseLayout>
  <Fragment slot="head">
    <title>{title}</title>
    <meta name="description" content={description} />
  </Fragment>

  <Header client:load />

  <div class="main-container">
    <div class="main-content-wrapper">
      <main id="main-content" class="game-page">
        <MemoryCardGameIframe client:load />
      </main>
    </div>
  </div>

  <footer>
    <Footer />
  </footer>
</BaseLayout>

<style>
  .game-page {
    padding: 0;
    min-height: calc(100vh - 64px); /* Adjust header height */
    background: #0f172a;
  }
</style>
