    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        const BASE_URL = import.meta.env.PUBLIC_API_BASE_URL || 'http://localhost:8000';
        
        const form = document.getElementById('resetPasswordForm');
        const submitBtn = document.getElementById('submitBtn');
        const messageDiv = document.getElementById('message');
        const newPasswordInput = document.getElementById('newPassword');
        const confirmPasswordInput = document.getElementById('confirmPassword');
        const strengthBar = document.getElementById('strengthBar');
        const timerElement = document.getElementById('timer');
        const countdownElement = document.getElementById('countdown');
        const codeInputContainer = document.getElementById('codeInputContainer');

        // Get email from URL query params
        const urlParams = new URLSearchParams(window.location.search);
        const email = urlParams.get('email');

        if (!email) {
            showMessage('Thi·∫øu th√¥ng tin email. Vui l√≤ng y√™u c·∫ßu ƒë·∫∑t l·∫°i m·∫≠t kh·∫©u l·∫°i.', 'error');
            setTimeout(() => {
                window.location.href = '/forgot-password';
            }, 3000);
        }

        // Initialize code input boxes
        let code = Array(6).fill('');
        const codeInputs = [];

        for (let i = 0; i < 6; i++) {
            const input = document.createElement('input');
            input.type = 'text';
            input.inputMode = 'numeric';
            input.maxLength = 1;
            input.className = 'code-input-box';
            input.dataset.index = i;
            input.placeholder = '¬∑';
            input.autocomplete = 'off';
            
            input.addEventListener('input', (e) => handleCodeInput(i, e.target.value));
            input.addEventListener('keydown', (e) => handleCodeKeyDown(i, e));
            input.addEventListener('paste', handleCodePaste);
            
            codeInputContainer.appendChild(input);
            codeInputs.push(input);
        }

        // Auto-focus first input
        codeInputs[0].focus();

        function handleCodeInput(index, value) {
            if (value && !/^\d$/.test(value)) {
                codeInputs[index].value = '';
                return;
            }

            code[index] = value;
            
            // Add visual feedback
            if (value) {
                codeInputs[index].classList.add('filled');
                setTimeout(() => codeInputs[index].classList.remove('filled'), 300);
            }

            if (value && index < 5) {
                codeInputs[index + 1].focus();
            }
        }

        function handleCodeKeyDown(index, e) {
            if (e.key === 'Backspace' && !code[index] && index > 0) {
                codeInputs[index - 1].focus();
            }
        }

        function handleCodePaste(e) {
            e.preventDefault();
            const pastedData = e.clipboardData.getData('text').trim();
            
            if (/^\d{6}$/.test(pastedData)) {
                for (let i = 0; i < 6; i++) {
                    code[i] = pastedData[i];
                    codeInputs[i].value = pastedData[i];
                }
                codeInputs[5].focus();
            }
        }

        // Password strength indicator
        newPasswordInput.addEventListener('input', (e) => {
            const password = e.target.value;
            let strength = 0;

            if (password.length >= 6) strength++;
            if (password.length >= 10) strength++;
            if (/[A-Z]/.test(password)) strength++;
            if (/[a-z]/.test(password)) strength++;
            if (/[0-9]/.test(password)) strength++;
            if (/[^A-Za-z0-9]/.test(password)) strength++;

            strengthBar.className = 'password-strength-bar';
            if (strength <= 2) {
                strengthBar.classList.add('weak');
            } else if (strength <= 4) {
                strengthBar.classList.add('medium');
            } else {
                strengthBar.classList.add('strong');
            }
        });

        // Countdown timer (10 minutes)
        let timeLeft = 10 * 60; // 10 minutes in seconds

        const timerInterval = setInterval(() => {
            timeLeft--;

            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            countdownElement.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;

            if (timeLeft <= 60) {
                timerElement.classList.add('expiring');
            }

            if (timeLeft <= 0) {
                clearInterval(timerInterval);
                showMessage('M√£ x√°c th·ª±c ƒë√£ h·∫øt h·∫°n. Vui l√≤ng y√™u c·∫ßu m√£ m·ªõi.', 'error');
                submitBtn.disabled = true;
            }
        }, 1000);

        function showMessage(message, type) {
            messageDiv.textContent = message;
            messageDiv.className = `message ${type}`;
        }

        function hideMessage() {
            messageDiv.style.display = 'none';
        }

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            hideMessage();

            const codeValue = code.join('');
            const newPassword = newPasswordInput.value;
            const confirmPassword = confirmPasswordInput.value;

            // Validation
            if (codeValue.length !== 6) {
                showMessage('Vui l√≤ng nh·∫≠p ƒë·∫ßy ƒë·ªß m√£ x√°c th·ª±c', 'error');
                return;
            }

            if (newPassword.length < 6) {
                showMessage('M·∫≠t kh·∫©u ph·∫£i c√≥ √≠t nh·∫•t 6 k√Ω t·ª±', 'error');
                return;
            }

            if (newPassword !== confirmPassword) {
                showMessage('M·∫≠t kh·∫©u x√°c nh·∫≠n kh√¥ng kh·ªõp', 'error');
                return;
            }

            // Submit
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="loading-spinner"></span>ƒêang x·ª≠ l√Ω...';

            try {
                const response = await axios.post(`${BASE_URL}/api/auth/reset-password/`, {
                    email: email,
                    code: codeValue,
                    new_password: newPassword,
                    confirm_password: confirmPassword
                });

                clearInterval(timerInterval);
                showMessage(response.data.message, 'success');
                
                // Redirect to login after 2 seconds
                setTimeout(() => {
                    window.location.href = '/dang-nhap';
                }, 2000);
                
            } catch (error) {
                console.error('Error:', error);
                const errorMessage = error.response?.data?.detail || 'ƒê√£ x·∫£y ra l·ªói. Vui l√≤ng th·ª≠ l·∫°i.';
                showMessage(errorMessage, 'error');
                submitBtn.disabled = false;
                submitBtn.textContent = 'ƒê·∫∑t l·∫°i m·∫≠t kh·∫©u';
            }
        });
    </script>
