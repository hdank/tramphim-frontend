        if (appliedCoupons.length === 0) {
            appliedCouponsContainer.classList.add('hidden');
            return;
        }

        appliedCouponsContainer.classList.remove('hidden');
        appliedCouponsList.innerHTML = appliedCoupons.map(code => {
            const coupon = ALL_COUPONS[code];
            return `
                <span class="inline-flex items-center gap-1 px-2 py-1 bg-green-500/20 border border-green-500/30 rounded-full text-green-400 text-xs">
                    <span class="font-mono font-bold">${code}</span>
                    <span class="text-green-300">(${coupon.description})</span>
                    <button onclick="removeCoupon('${code}')" class="ml-1 hover:text-red-400 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </button>
                </span>
            `;
        }).join('');
    }

    function updateQRCode() {
        const { finalPrice } = calculateDiscount();
        const codes = appliedCoupons.join(' ');
        
        // Build transfer content: PREMIUM [email] [codes]
        let transferContent = 'PREMIUM';
        if (userEmail) {
            transferContent += ` ${userEmail}`;
        }
        if (codes) {
            transferContent += ` ${codes}`;
        }
        
        // Update transfer content display
        transferContentEl.textContent = transferContent;

        // Generate VietQR URL
        const encodedContent = encodeURIComponent(transferContent);
        const qrUrl = `https://img.vietqr.io/image/${BANK_CONFIG.bankId}-${BANK_CONFIG.accountNumber}-compact.png?amount=${finalPrice}&addInfo=${encodedContent}`;
        
        // Update QR image with loading effect
        dynamicQR.style.opacity = '0.5';
        dynamicQR.src = qrUrl;
        dynamicQR.onload = () => {
            dynamicQR.style.opacity = '1';
        };
    }

    function renderAvailableCoupons() {
        // Only show PUBLIC_COUPONS, not affiliate codes
        availableCouponsList.innerHTML = Object.entries(PUBLIC_COUPONS).map(([code, coupon]) => {
            return `
                <div class="flex justify-between items-center text-gray-400">
                    <span class="font-mono text-yellow-400 cursor-pointer hover:text-yellow-300" onclick="copyCode('${code}')" title="Click ƒë·ªÉ copy">${code}</span>
                    <span>${coupon.description}</span>
                </div>
            `;
        }).join('');
    }

    function copyCode(code) {
        navigator.clipboard.writeText(code);
        // Quick visual feedback
        const el = event.target;
        const original = el.textContent;
        el.textContent = 'ƒê√£ copy!';
        el.classList.add('text-green-400');
        setTimeout(() => {
            el.textContent = original;
            el.classList.remove('text-green-400');
        }, 1000);
    }

    // ============================================
    // MODAL FUNCTIONS
    // ============================================
    function showModal(title, message, type = 'success') {
        modalTitle.textContent = title;
        modalMessage.textContent = message;
        
        if (type === 'success') {
            modalIcon.className = "mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-green-900/50 sm:mx-0 sm:h-10 sm:w-10";
            modalIcon.innerHTML = `<svg class="h-6 w-6 text-green-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>`;
        } else {
            modalIcon.className = "mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-900/50 sm:mx-0 sm:h-10 sm:w-10";
            modalIcon.innerHTML = `<svg class="h-6 w-6 text-red-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>`;
        }
        
        modal.classList.remove('hidden');
    }

    function hideModal() {
        modal.classList.add('hidden');
    }

    // ============================================
    // FILE UPLOAD FUNCTIONS
    // ============================================
    function handleFileSelect(e) {
        const file = e.target.files[0];
        if (file) {
            showPreview(file);
        }
    }

    function showPreview(file) {
        const reader = new FileReader();
        reader.onload = function(e) {
            previewImage.src = e.target.result;
            previewContainer.classList.remove('hidden');
        }
        reader.readAsDataURL(file);
    }

    // ============================================
    // EVENT LISTENERS
    // ============================================
    applyCoupon1Btn.addEventListener('click', () => applyCoupon(couponInput1, coupon1Status));
    applyCoupon2Btn.addEventListener('click', () => applyCoupon(couponInput2, coupon2Status));

    // Enter key to apply coupon
    couponInput1.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
            e.preventDefault();
            applyCoupon(couponInput1, coupon1Status);
        }
    });
    couponInput2.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
            e.preventDefault();
            applyCoupon(couponInput2, coupon2Status);
        }
    });

    closeModalBtn.addEventListener('click', hideModal);
    fileInput.addEventListener('change', handleFileSelect);

    // Handle form submission
    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const file = fileInput.files[0];
        if (!file) {
            showModal('L·ªói', 'Vui l√≤ng ch·ªçn ·∫£nh minh ch·ª©ng chuy·ªÉn kho·∫£n', 'error');
            return;
        }

        const token = localStorage.getItem('access_token');
        if (!token) {
            showModal('Y√™u c·∫ßu ƒëƒÉng nh·∫≠p', 'Vui l√≤ng ƒëƒÉng nh·∫≠p ƒë·ªÉ th·ª±c hi·ªán ch·ª©c nƒÉng n√†y', 'error');
            setTimeout(() => {
                window.location.href = '/dang-nhap';
            }, 2000);
            return;
        }

        submitBtn.disabled = true;
        submitBtn.innerHTML = '<svg class="animate-spin h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> ƒêang g·ª≠i...';

        const formData = new FormData();
        formData.append('file', file);
        formData.append('amount', currentFinalPrice.toString());
        formData.append('coupons', appliedCoupons.join(','));

        try {
            const response = await fetch(`${BASE_URL}/api/premium/request`, {
                method: 'POST',
                headers: {
                    'Authorization': `Bearer ${token}`
                },
                body: formData
            });

            if (!response.ok) {
                throw new Error('G·ª≠i y√™u c·∫ßu th·∫•t b·∫°i');
            }

            const result = await response.json();
            showModal('Th√†nh c√¥ng', result.message || 'Y√™u c·∫ßu ƒë√£ ƒë∆∞·ª£c g·ª≠i. Vui l√≤ng ch·ªù 5-10 ph√∫t ƒë·ªÉ k√≠ch ho·∫°t.', 'success');
            form.reset();
            previewContainer.classList.add('hidden');
            
        } catch (error) {
            console.error('Error:', error);
            showModal('L·ªói', 'C√≥ l·ªói x·∫£y ra. Vui l√≤ng th·ª≠ l·∫°i sau.', 'error');
        } finally {
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 mr-2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg> G·ª≠i x√°c nh·∫≠n';
        }
    });

    // Make removeCoupon and copyCode global for onclick
    window.removeCoupon = removeCoupon;
    window.copyCode = copyCode;

    // ============================================
    // FETCH USER PROFILE
    // ============================================
    const loginReminder = document.getElementById('loginReminder');

    async function fetchUserProfile() {
        const token = localStorage.getItem('access_token');
        if (!token) {
            console.log('No token found, user not logged in');
            // Show login reminder
            if (loginReminder) loginReminder.classList.remove('hidden');
            updateQRCode(); // Still update QR without email
            return;
        }

        try {
            const response = await fetch(`${BASE_URL}/api/auth/profile/`, {
                headers: { Authorization: `Bearer ${token}` }
            });
            
            if (response.ok) {
                const userData = await response.json();
                userEmail = userData.email || '';
                console.log('User email loaded:', userEmail);
                // Hide login reminder if logged in
                if (loginReminder) loginReminder.classList.add('hidden');
                // Update QR with user email
                updateQRCode();
            } else {
                // Token invalid, show login reminder
                if (loginReminder) loginReminder.classList.remove('hidden');
                updateQRCode();
            }
        } catch (error) {
            console.error('Failed to fetch user profile:', error);
            if (loginReminder) loginReminder.classList.remove('hidden');
            updateQRCode();
        }
    }

    // ============================================
    // INITIALIZE
    // ============================================
    renderAvailableCoupons();
    fetchUserProfile(); // Fetch user email first
    updateQRCode();
</script>

