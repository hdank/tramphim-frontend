                price -= discount;
            } else if (coupon.type === 'fixed') {
                totalDiscount += coupon.discount;
                price -= coupon.discount;
            }
        });

        // Ensure price doesn't go below 0
        price = Math.max(price, 0);
        
        return { totalDiscount, finalPrice: price };
    }

