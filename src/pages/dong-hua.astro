---
export const prerender = false;

import BaseLayout from "../layouts/Layout.astro";
import Header from "../components/Header/Header";
import CategoryMovies from "../components/CategoryMovies/LoaiPhim";
import Footer from "../components/Footer";
import Seo from "../seometas/SeoLoaiPhim.astro";

const BASE_URL = import.meta.env.PUBLIC_API_BASE_URL || 'https://api.tramphim.online';

const initialPage = 1;
const limit = 30;

// Fetch helper with error handling
const fetchJson = async (url) => {
  try {
    const res = await fetch(url);
    if (!res.ok) throw new Error(`Lỗi khi fetch API: ${url}`);
    return await res.json();
  } catch (err) {
    console.error(`Fetch error: ${url}`, err);
    return null;
  }
};

// Fetch Dong Hua (Chinese animation) with filters
const dongHuaData = await fetchJson(
  `${BASE_URL}/api/filter/?page=${initialPage}&limit=${limit}&loai_phim=hoat-hinh&quoc_gia=trung-quoc&sort=ngay-tao`
);

const topResponse = await fetchJson(
  `${BASE_URL}/api/filter/?page=1&limit=10&sort=luot-xem`
);
const topmovies = topResponse?.data || [];

if (!dongHuaData || !topmovies) {
  return new Response("Không thể lấy dữ liệu. Vui lòng thử lại sau.", {
    status: 500,
  });
}

const currentCategoryName = "Dong Hua";
const slug = "dong-hua";
---

<BaseLayout>
  <Fragment slot="head">
    <Seo slug={slug} currentCategoryName={currentCategoryName} />
  </Fragment>

  <Header client:load />

  <main class="main-type-layout">
    <div class="type-content-flex">
      <section class="type-main-section">
        <CategoryMovies
          initialData={dongHuaData}
          initialSlug={slug}
          baseUrl={BASE_URL}
          initialLimit={limit}
          tittle={currentCategoryName}
          client:load
        />
      </section>
    </div>
  </main>

  <footer>
    <Footer />
  </footer>
</BaseLayout>


