    function showModal(title, message, type = 'success') {
        modalTitle.textContent = title;
        modalMessage.textContent = message;
        
        if (type === 'success') {
            modalIcon.className = "mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-green-900/50 sm:mx-0 sm:h-10 sm:w-10";
            modalIcon.innerHTML = `<svg class="h-6 w-6 text-green-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>`;
        } else {
            modalIcon.className = "mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-900/50 sm:mx-0 sm:h-10 sm:w-10";
            modalIcon.innerHTML = `<svg class="h-6 w-6 text-red-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>`;
        }
        
        modal.classList.remove('hidden');
    }

    function hideModal() {
        modal.classList.add('hidden');
    }

    function updateCustomPoints() {
        const value = parseInt(customAmount.value) || 0;
        const points = Math.floor(value * EXCHANGE_RATE);
        customPointsDisplay.textContent = points.toLocaleString();
    }

    // Handle custom amount selection
    amountRadios.forEach(radio => {
        radio.addEventListener('change', (e) => {
            if (e.target.value === 'custom') {
                customAmountDiv.classList.remove('hidden');
                customAmount.focus();
            } else {
                customAmountDiv.classList.add('hidden');
            }
        });
    });

    customAmount.addEventListener('input', updateCustomPoints);

    closeModalBtn.addEventListener('click', hideModal);

    // Handle file selection
    fileInput.addEventListener('change', handleFileSelect);

    function handleFileSelect(e) {
        const file = e.target.files[0];
        if (file) {
            showPreview(file);
        }
    }

    function showPreview(file) {
        const reader = new FileReader();
        reader.onload = function(e) {
            previewImage.src = e.target.result;
            previewContainer.classList.remove('hidden');
        }
        reader.readAsDataURL(file);
    }

    // Handle form submission
    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const file = fileInput.files[0];
        if (!file) {
            showModal('L·ªói', 'Vui l√≤ng ch·ªçn ·∫£nh minh ch·ª©ng chuy·ªÉn kho·∫£n', 'error');
            return;
        }

        let amountVnd = null;
        let packageName = null;
        const selectedOption = document.querySelector('input[name="amount"]:checked')?.value;
        
        if (!selectedOption) {
            showModal('L·ªói', 'Vui l√≤ng ch·ªçn m·ª©c mua', 'error');
            return;
        }

        if (selectedOption === 'custom') {
            amountVnd = parseInt(customAmount.value);
            packageName = 'CUSTOM';
            if (!amountVnd || amountVnd < MIN_AMOUNT) {
                showModal('L·ªói', `Vui l√≤ng nh·∫≠p m·ª©c n·∫°p t·ªëi thi·ªÉu ${MIN_AMOUNT.toLocaleString()} VNƒê`, 'error');
                return;
            }
        } else {
            // Parse "10000|VIP1" format
            const [vnd, pkg] = selectedOption.split('|');
            amountVnd = parseInt(vnd);
            packageName = pkg;
        }

        const amountPoints = Math.floor(amountVnd * EXCHANGE_RATE); // Exchange rate: 1000 VND = 100 ƒê·∫≠u

        const token = localStorage.getItem('access_token');
        if (!token) {
            showModal('Y√™u c·∫ßu ƒëƒÉng nh·∫≠p', 'Vui l√≤ng ƒëƒÉng nh·∫≠p ƒë·ªÉ th·ª±c hi·ªán ch·ª©c nƒÉng n√†y', 'error');
            setTimeout(() => {
                window.location.href = '/dang-nhap';
            }, 2000);
            return;
        }

        submitBtn.disabled = true;
        submitBtn.textContent = 'ƒêang g·ª≠i...';

        const formData = new FormData();
        formData.append('file', file);
        formData.append('amount_vnd', parseInt(amountVnd).toString());
        formData.append('amount_points', parseInt(amountPoints).toString());
        formData.append('package_name', packageName);

        try {
            const response = await fetch(`${BASE_URL}/api/points/request`, {
                method: 'POST',
                headers: {
                    'Authorization': `Bearer ${token}`
                },
                body: formData
            });

            if (!response.ok) {
                const errorData = await response.json();
                console.error('API Error:', errorData);
                throw new Error(errorData.detail || JSON.stringify(errorData) || 'G·ª≠i y√™u c·∫ßu th·∫•t b·∫°i');
            }

            const result = await response.json();
            showModal('Th√†nh c√¥ng', result.message, 'success');
            form.reset();
            previewContainer.classList.add('hidden');
            customAmountDiv.classList.add('hidden');
            
        } catch (error) {
            console.error('Error:', error);
            showModal('L·ªói', error.message || 'C√≥ l·ªói x·∫£y ra. Vui l√≤ng th·ª≠ l·∫°i sau.', 'error');
        } finally {
            submitBtn.disabled = false;
            submitBtn.textContent = 'G·ª≠i x√°c nh·∫≠n';
        }
    });
</script>

