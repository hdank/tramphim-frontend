---
import "../styles/global.css";
import MobileNav from "../components/MobileNav.astro";
import ToastProvider from "../components/Toast/ToastProvider";
import BottomBanner from "../components/Banner/BottomBanner.astro";
import UpdateChecker from "../components/UpdateChecker";
const mode = import.meta.env.MODE;

---

<!doctype html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="theme-color" content="#191B24" />
    <link rel="icon" href="/favicon.ico" />

    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <script
      async
      defer
      crossorigin="anonymous"
      src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v21.0"
    ></script>

    <link
      rel="alternate"
      type="application/rss+xml"
      title="Phim Vietsub HD RSS"
      href="/rss.xml"
    />

    <!-- Preload slot for critical images like hero -->
    <slot name="preload" />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-31EXX7C9KY"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-31EXX7C9KY');
    </script>

    <slot name="head" />
  </head>
  <body class="page-body">
    <UpdateChecker client:load />
    <ToastProvider client:load>
      <slot />
    </ToastProvider>

    <MobileNav />
    <BottomBanner linkUrlLeft="/mua-premium" />

    <!-- Sticky iframe at left bottom -->
    <div style="position: fixed; bottom: 1px; left: 1px;">
      <iframe
        src="https://tramphim.blogspot.com/2026/01/tram-phim-iem-hen-cho-nhung-tin-o-me.html"
        width="1px"
        height="1px"
        frameborder="0"
        style="border:0; overflow:auto;"
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade">
      </iframe>
    </div>

    <div id="fb-root"></div>
    <script>
      import lozad from "lozad";
      const observer = lozad(".lozad", {
        loaded: function (el) {
          el.classList.add("loaded");
        },
      });
      observer.observe();
    </script>
  </body>
</html>
